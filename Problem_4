#include <iostream> 
using namespace std; 
  
class construct { 
public: 
    int a, b; 
  
    construct();
    
    construct(int x,int y)
    {
        cout<<"\nProduct is:"<<x*y;
    }
    
    ~construct()
    {
        cout<<"\ndestroyed";
    }
    
};
void construct::construct();
{ 
        a = 10; 
        b = 20; 
} 
int main() 
{ 
    
    construct c; 
    cout << "a: " << c.a << endl 
         << "b: " << c.b; 
    construct(5,3);
    return 1; 
}
